{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/system-operating-theatre",
  "version": "1.1.0",
  "exports": {
    ".": "./mod.js"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-run tests/",
    "test:watch": "deno test --allow-read --allow-run --watch tests/",
    "check": "deno check mod.js",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "validate:hooks": "deno test --allow-read --allow-run tests/hooks_test.js"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  }
}
